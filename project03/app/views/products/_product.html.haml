= content_tag_for :article, product do
  %h1
    = link_to product.title, product_path( product )
    = link_to "[Edit]", edit_product_path(product) if logged_in?
    = link_to "[Destroy]", product_path(product), method: :delete if logged_in?
  = image_tag product.image_url
  .description!= product.description
  .price= number_to_currency product.price
  = button_to 'Add to Cart', add_to_cart_path( product_id: product ), remote: true
