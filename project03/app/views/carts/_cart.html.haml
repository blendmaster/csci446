%h1 Your Cart
%table#line_items
  %thead
    %tr
      %th Item
      %th Price
      %th Quantity
      %th Subtotal
  %tbody= render cart.line_items
  %tfoot
    %tr
      %td.total_line{colspan: 3} Total
      %td.currency.total= number_to_currency cart.total_price
= button_to 'Empty Cart', empty_cart_path, method: :post, confirm: "Are you sure?"
= button_to 'Checkout', new_order_path, method: :get

